{
    "div#article-body": {
        "background-color": "none",
        "padding": "0 2rem",
        "padding-bottom": "5rem",
        "background-size": "100% 1600px",
        "background-image": "radial-gradient(circle at 30% 20%, rgba(251, 76, 12, 0.5), transparent 15%), radial-gradient(circle at 50% 25%, rgba(251, 76, 12, 0.5), transparent 15%), radial-gradient(circle at 70% 75%, rgba(251, 76, 12, 0.5), transparent 20%)",
        "height": "auto",
        "color" : "var(--text-2) !important"
    },
    "h1": {
        "text-align": "center",
        "padding": 0,
        "fontSize": "2rem",
        "lineHeight": 1.2,
        "fontWeight": 800
    },
    "h2": {
        "margin": "0",
        "padding": "7rem 0 1rem",
        "fontSize": "1.625rem",
        "lineHeight": 1.3,
        "fontWeight": 700
    },
    "h3": {
        "margin": "0 0 1rem",
        "padding": "2rem 0 1rem",
        "border-bottom": "1px solid var(--text-2)",
        "fontSize": "1.375rem",
        "lineHeight": 1.35,
        "fontWeight": 500
    },
    "p": {
        "margin": "0",
        "font-weight": 400,
        "font-size": "12pt",
        "line-height": "2.0"
    },
    "li": {
        "margin": "0.25rem 0",
        "font-weight": 400,
        "font-size": "12pt",
        "line-height": "2.0",
        "padding-left": "0.5rem",
        "margin-left": "1rem"
    },
    "a": {
        "color": "#0a66c2",
        "textDecoration": "underline",
        "textUnderlineOffset": "0.15em"
    },
    "a:hover": {
        "textDecorationThickness": "2px"
    },
    "ul": {
        "margin": "0 0 1rem 1.25rem",
        "padding": 0
    },
    "ol": {
        "margin": "0 0 1rem 1.25rem",
        "padding": 0
    },
    "blockquote": {
        "margin": "1.25rem 0",
        "padding": "0.5rem 1rem",
        "borderLeft": "4px solid #d0d7de",
        "background": "#f6f8fa",
        "color": "#24292f"
    },
    "hr": {
        "height": "1px",
        "border": "none",
        "background": "#e4e7eb",
        "margin": "2rem 0"
    },
    "img": {
        "maxWidth": "100%",
        "height": "auto",
        "display": "block",
        "margin": "1rem auto",
        "borderRadius": "6px"
    },
    "figure": {
        "margin": "1.25rem 0",
        "textAlign": "center"
    },
    "figcaption": {
        "marginTop": "0.5rem",
        "fontSize": "0.9rem",
        "color": "#59636e"
    },
    "code": {
        "fontFamily": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace",
        "fontSize": "0.95em",
        "background": "#f6f8fa",
        "padding": "0.15em 0.35em",
        "borderRadius": "4px",
        "border": "1px solid #e4e7eb"
    },
    "pre": {
        "fontFamily": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace",
        "fontSize": "0.95rem",
        "lineHeight": 1.65,
        "overflowX": "auto",
        "background": "#0b1220",
        "color": "#e6edf3",
        "padding": "1rem",
        "borderRadius": "8px",
        "border": "1px solid #0f1a30",
        "margin": "1rem 0"
    },
    "table": {
        "width": "100%",
        "borderCollapse": "collapse",
        "margin": "1.25rem 0",
        "fontSize": "0.95rem"
    },
    "th": {
        "textAlign": "left",
        "fontWeight": 700,
        "borderBottom": "2px solid #d0d7de",
        "padding": "0.5rem"
    },
    "td": {
        "borderBottom": "1px solid #e4e7eb",
        "padding": "0.5rem",
        "verticalAlign": "top"
    },
    "kbd": {
        "fontFamily": "inherit",
        "fontSize": "0.85em",
        "padding": "0.1em 0.35em",
        "border": "1px solid #d0d7de",
        "borderBottomWidth": "2px",
        "borderRadius": "4px",
        "background": "#ffffff"
    },
    "mark": {
        "background": "#fff2ac",
        "padding": "0.05em 0.2em"
    },
    "strong": {
        "fontWeight": 700
    },
    "em": {
        "fontStyle": "italic"
    },
    "small": {
        "fontSize": "0.875em",
        "color": "#59636e"
    },
    "sup": {
        "fontSize": "0.75em",
        "verticalAlign": "super"
    },
    "sub": {
        "fontSize": "0.75em",
        "verticalAlign": "sub"
    }
}